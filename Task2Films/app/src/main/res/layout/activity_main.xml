<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@android:string/search_go"
            android:ems="10"
            android:id="@+id/TextFieldSearch" android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="58dp"
            android:layout_height="38dp" app:srcCompat="@android:drawable/ic_search_category_default"
            android:id="@+id/imageButtonSerach"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
    />
    <ListView
            android:layout_width="420dp"
            android:layout_height="625dp" android:id="@+id/listView"
    />
</LinearLayout>